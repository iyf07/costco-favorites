<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center" style="margin-bottom: 1em; font-family:Arial,sans-serif;font-weight: 500;">Add an Item</h1>
    <div class="col-6 offset-3">
        <form action="/products" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Item Name</label>
                <input class="form-control" type="text" id="title" name="product[title]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Item Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input class="form-control" type="number" id="price" placeholder="0.00"
                           aria-describedby="price-label" name="product[price]" required>
                    <!--                    <span class="input-group-text" id="unit-label">/</span>-->
                    <!--                    <input class="form-control" type="text" id="unit" placeholder="Each" aria-describedby="unit-label">-->
                </div>
            </div>
            <input type="file" name="image" id="image" required>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="product[image]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Description</label>
                <textarea class="form-control" type="text" id="description" name="product[description]"
                          required></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Product</button>
            </div>
        </form>
        <a href="/products">All Products</a>
    </div>
</div>

