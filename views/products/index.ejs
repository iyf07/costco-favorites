<% layout('layouts/boilerplate') %>
<h1 class="text-center" style="margin-bottom: 1em; font-family:Arial,sans-serif;font-weight: 500;">Customer Favorite Items</h1>
<div class="row row-cols=1 row-cols-md-3 ">
    <% for (let product of products) { %>
        <div class="col mb-4">
            <div class="card text-white bg-dark" style="height: auto">
                <img class="card-img-top" src="<%= product.image %>" alt="">
                <div class="card-body">
                    <h5 class="card-title mb-2"><%= product.title %></h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <div class="row row-cols=1 row-cols-md=2">
                            <div class="col">
                                <%= product.likes %> likes
                            </div>
                            <div class="col">
                                <%= product.dislikes %> dislikes
                            </div>
                        </div>
                    </h6>
                    <p class="card-text"><%= product.description%></p>
                    <div class="row row-cols=1 row-cols-md=2">
                        <div class="col">
                            <h3 style="color:#B12704;font-family:Arial,sans-serif;">$<%= product.price %></h3>
                        </div>
                        <div class="col">
                            <a href="/products/<%= product._id %>" class="btn btn-primary">View Item</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>


