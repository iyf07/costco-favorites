<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center" style="margin-bottom: 1em; font-family:Arial,sans-serif;font-weight: 500;">Edit <%= product.title%></h1>
    <div class="col-6 offset-3">
        <form action="/products/<%= product._id %>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Item Name</label>
                <input class="form-control" type="text" id="title" name="product[title]"
                       value="<%= product.title %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Item Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                           aria-describedby="price-label" name="product[price]" value="<%= product.price %>" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="product[image]"
                       value="<%= product.image %>" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                          name="product[description]"><%= product.description %> required></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update the Item </button>
            </div>
        </form>
    </div>
</div>